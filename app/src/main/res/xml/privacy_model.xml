<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="privacy_device_information"
        android:title="@string/device_information">
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_device_model"
            android:title="ro.product.model"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_device_manufacturer"
            android:title="ro.product.manufacturer"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_device_brand"
            android:title="ro.product.brand"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_device_product"
            android:title="ro.product.name"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_device_device"
            android:title="ro.product.device"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="privacy_phone_info"
        android:title="@string/phone_info">
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_phone_device_id"
            android:title="@string/device_id"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_phone_bluetooth_address"
            android:title="@string/bluetooth_address"/>
        <EditTextPreference
            android:defaultValue=""
            android:key="privacy_phone_mac_address"
            android:title="@string/mac_address"/>
    </PreferenceCategory>
</PreferenceScreen>